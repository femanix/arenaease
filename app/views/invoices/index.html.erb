<p id="notice"><%= notice %></p>

<h1>Invoices</h1>

<table class='table table-bordered table-hover'>
  <thead>
    <tr>
      <th>Comanda</th>
      <th>Nota chave</th>
      <th>Nota numero</th>
      <th>Valor</th>
      <th>Data de Envio</th>
      <th>Situaçao</th>
      <th>PDF</th>
      <th>XML</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @invoices.each do |invoice| %>
      <tr>
      <td><%= "#{invoice.comanda.cliente.nome_cliente} - Nº#{invoice.comanda_id}" %></td>
        <td><%= invoice.nota_chave %></td>
        <td><%= invoice.nota_numero %></td>
        <td><%= to_money invoice.valor_cents %></td>
        <td><%= invoice.created_at.strftime('%d/%m/%Y %H:%M') %></td>
        <td><%= invoice.nota_situacao %></td>
        <td><%= invoice.nota_pdf %></td>
        <td><%= invoice.nota_xml %></td>
        <td><%= link_to 'Show', invoice %></td>
        <td><%= link_to 'Edit', edit_invoice_path(invoice) %></td>
        <td><%= link_to 'Destroy', invoice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

