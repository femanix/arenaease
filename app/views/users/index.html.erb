
<p id="notice"><%= notice %></p>

<div id="modal-window" class="modal" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content"></div>
    </div>
</div>


<br>
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Usuários</h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                    </li>
                    <li>
                        <a class="close-link">
                            <i class="fa fa-close"></i>
                        </a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Nome</th>
                            <th>Sobrenome</th>
                            <th>E-mail</th>
                            <th> Ações </th>
                        </tr>
                    </thead>

                    <tbody>
                        <% @users.each do |user| %>
                            <tr>
                                <td><%= user.first_name %></td>
                                <td><%= user.last_name %></td>
                                <td><%= user.email %></td>
                                <td class="actionsForm">
                                     <%= link_to edit_user_path(user), class: 'btn btn-primary btn-round btn-xs' do %>
                                        <i class="fa fa-edit"></i>
                                        Editar
                                     <% end %>
                                    
                                    <%= link_to '#', method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-round btn-danger btn-xs' do %>
                                        <i class="fa fa-trash-o"></i>
                                        Deletar
                                    <% end %>
                                </td>
                            </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
          <%= link_to 'Cadastrar Novo Administrador', new_user_path, class: 'btn btn-round btn-success' %>
        </div>
    </div>
