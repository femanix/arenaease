<p id="notice"><%= notice %></p>
<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        <%= link_to  produtos_path, class:"btn btn-danger navbar-right" do %>
            <i class="fa fa-undo"></i>
            Limpar Pesquisa
        <%end%>
        <div class="x_title">
            <h2>Estoque - Produtos</h2>
            <ul class="nav navbar-right panel_toolbox">
                <li>
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                </li>
                <li>
                    <a class="close-link">
                        <i class="fa fa-close"></i>
                    </a>
                </li>
            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <table class="table table-striped table-bordered no-footer dtr-inline collapsed">
                <thead>
                    <tr>
                        <th>Produto</th>
                        <th>Categoria</th>
                        <th>Preço de Compra</th> 
                        <th>Preço de Venda</th> 
                        <th>Quantidade</th>
                        <th>Código de Barras</th>
                        <th>Quantidade minima</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    <% @produtos.each do |produto| %>
                        <tr>
                            <td><%= produto.descricao %></td>
                            <td><%= produto.categoria %></td>
                            <td><%= to_money(produto.preco_compra) %></td>
                            <td><%= to_money(produto.preco_venda) %></td>
                            <td><%= produto.quantidade %></td>
                            <td><%= produto.ncm %></td>
                            <td><%= produto.quantidade_minima %></td>
                            <td>
                                <%= link_to edit_produto_path(produto), class: 'btn btn-round btn-primary btn-xs' do %>
                                    <i class="fa fa-edit"></i>
                                    Editar
                                <% end %>
                                <%= link_to produto, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-round btn-danger btn-xs' do %>
                                    <i class="fa fa-trash-o"></i>
                                    Editar
                                <% end %>
                            </td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
        <%= link_to 'Cadastrar Novo Produto', new_produto_path, {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#modal-window', class: 'btn btn-round btn-success'}%>
    </div>
</div>

<div id="modal-window" class="modal fade" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content"></div>
    </div>
</div>