<div id="modal-window" class="modal" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content"></div>
  </div>
</div>


<div class="row">
  <div class="col-md-12">
    <div class="x_panel">
      <%= link_to  comandas_path, class:"btn btn-danger navbar-right" do %>
      <i class="fa fa-undo"></i>
        Limpar Pesquisa
      <%end%>

        <div class="x_title">
          <h1>Comandas</h1>

        </div>

        <div class="x_content">
          <%= render 'painel' %>
          <div class="row-commands">
            <% @comandas.each do |comanda| %>
              <div class="col-md-4 col-sm-4 col-xs-12 profile_details">
                <div class="well profile_view">
                  <div class="col-sm-12">
                    <h4 class="brief">
                      <i>
                        <% if comanda.encerrada? %>
                          <button type="button" class="btn btn-danger btn-xs">
                            Encerrada
                          </button>
                        <% else %>
                          <button type="button" class="btn btn-success btn-xs">
                            Aberta
                          </button>
                        <% end  %>

                      </i>
                    </h4>
                    <div class="left col-xs-10">
                      <h2><%= comanda.cliente.nome_cliente %></h2>
                      <p>
                        <strong>Observação:</strong>
                        <%= comanda.observacao %>
                      </p>
                      <ul class="list-unstyled">
                        <li>
                          <i class="fa fa-building"></i>
                          Total Geral:
                          <%= to_money(comanda.valor_total) %>
                        </li>
                        <li>
                          <i class="fa fa-phone"></i>
                          Telefone:
                          <%= comanda.cliente.telefone%>
                        </li>
                      </ul>
                    </div>
                  </div>
                  <div class="col-xs-12 bottom text-center">
                    <div class="col-xs-12 emphasis">
                      <%= link_to edit_comanda_path(comanda),  {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#myModal', class: 'btn btn-round btn-primary btn-xs'} do %>
                        <i class="fa fa-th-list"></i>
                        Editar Comanda
                      <% end %>
                      <%= link_to "/comandas/#{comanda.id}/pagar",  {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#myModal', class: 'btn btn-round btn-danger btn-xs'} do %>
                        <i class="fa fa-credit-card"></i>
                        Encerrar Comanda
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
          <%= link_to 'Criar nova Comanda', new_comanda_path, {:remote => true,'data-toggle' =>  "modal", 'data-target' => '#myModal', class: 'btn btn-round btn-success'}%>
        </div>
      </div>
    </div>
  </div>


  <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
          <h4 class="modal-title" id="myModalLabel">Modal title</h4>
        </div>
        <div class="modal-body">
          ...
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary">Save changes</button>
        </div>
      </div>
    </div>
  </div>
