<div class="row">
  <div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
      <div class="x_title">
        <h2>Cadastro de Usuário
          <small>novo usuário</small>
        </h2>
        <ul class="nav navbar-right panel_toolbox">
          <li>
            <a class="collapse-link">
              <i class="fa fa-chevron-up"></i>
            </a>
          </li>
        </ul>
        <div class="clearfix"></div>
      </div>
      <div class="x_content">
        <br>
          <%= form_with(model: @user, url: users_path,class: 'form-horizontal form-label-left', local: true) do |form| %>
            <div class="form-group">
              <%= form.label :first_name, class: 'control-label col-md-3 col-sm-3 col-xs-12'%>
              <div class="col-md-6 col-sm-6 col-xs-12">
                <%= form.text_field :first_name, class: 'form-control col-md-7 col-xs-12' %>
              </div>
            </div>

            <div class="form-group">
              <%= form.label :last_name, class: 'control-label col-md-3 col-sm-3 col-xs-12' %>
              <div class="col-md-6 col-sm-6 col-xs-12">
                <%= form.text_field :last_name, class: 'form-control col-md-7 col-xs-12' %>
              </div>
            </div>

            <div class="form-group">
              <%= form.label :email, class: 'control-label col-md-3 col-sm-3 col-xs-12' %>
              <div class="col-md-6 col-sm-6 col-xs-12">
                <%= form.text_field :email, class: 'form-control col-md-7 col-xs-12' %>
              </div>
            </div>
            <div class="form-group">
              <%= form.label :password, class: 'control-label col-md-3 col-sm-3 col-xs-12' %>
              <div class="col-md-6 col-sm-6 col-xs-12">
                <%= form.text_field :password, class: 'form-control col-md-7 col-xs-12' %>
              </div>
            </div>
            <div class="form-group">
              <%= form.label :password_confirmation, class: 'control-label col-md-3 col-sm-3 col-xs-12' %>
              <div class="col-md-6 col-sm-6 col-xs-12">
                <%= form.text_field :password_confirmation, class: 'form-control col-md-7 col-xs-12' %>
              </div>
            </div>
            <div class="ln_solid"></div>

            <div class="form-group">
              <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                <%= link_to 'Cancelar', users_path, class: 'btn btn-primary' %>
                <%= form.submit  class: 'btn btn-success'%>
            </div>
          <% end %>

        </div>
      </div>


    </div>
  </div>
</div></div>
